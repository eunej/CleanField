# CleanField Environment Configuration
# Copy this file to .env.local and fill in your values

# ===========================================
# Primus zkTLS Configuration
# Get your credentials from: https://dev.primuslabs.xyz
# ===========================================

# Primus App ID (public - can be exposed to frontend)
NEXT_PUBLIC_PRIMUS_APP_ID=your_primus_app_id_here

# Primus App Secret (private - server-side only)
PRIMUS_APP_SECRET=your_primus_app_secret_here

# Primus Template ID for GISTDA verification
# Create a template at https://dev.primuslabs.xyz
NEXT_PUBLIC_PRIMUS_TEMPLATE_ID=your_template_id_here

# ===========================================
# Blockchain Configuration - Base Network
# ===========================================

# Base Sepolia (Testnet) RPC URL
BASE_SEPOLIA_RPC_URL=https://sepolia.base.org

# Base Mainnet RPC URL (for production)
BASE_RPC_URL=https://mainnet.base.org

# Private key for contract deployment/oracle operations (server-side only)
# WARNING: Never commit this value!
PRIVATE_KEY=your_wallet_private_key_here

# ===========================================
# Smart Contract Addresses
# ===========================================

# CleanFieldRewards Contract (deploy using contracts/script/DeployBase.s.sol)
NEXT_PUBLIC_REWARDS_CONTRACT=0x0000000000000000000000000000000000000000

# Legacy Payment Contract (deprecated, use REWARDS_CONTRACT)
NEXT_PUBLIC_PAYMENT_CONTRACT=0x0000000000000000000000000000000000000000

# Oracle Contract Address (if separate)
NEXT_PUBLIC_ORACLE_CONTRACT=0x0000000000000000000000000000000000000000

# zkTLS Verifier Contract (Primus on-chain verifier)
NEXT_PUBLIC_VERIFIER_CONTRACT=0x0000000000000000000000000000000000000000

# ===========================================
# Token Addresses - Base Network
# ===========================================

# USDC on Base Sepolia (testnet)
NEXT_PUBLIC_USDC_ADDRESS=0x036CbD53842c5426634e7929541eC2318f3dCF7e

# USDC on Base Mainnet (production)
# NEXT_PUBLIC_USDC_ADDRESS=0x833589fCD6eDb6E08f4c7C32D4f71b54bdA02913

# ===========================================
# Reward Configuration
# ===========================================

# Reward per hectare per year (in USDC, 6 decimals)
# Default: 140 USDC (~à¸¿5,000 THB at 35 THB/USD)
NEXT_PUBLIC_REWARD_PER_HECTARE=140000000

# THB to USDC exchange rate (for display purposes)
# Default: 35 THB per 1 USD
NEXT_PUBLIC_THB_TO_USD_RATE=35

# ===========================================
# Network Configuration
# ===========================================

# Active network: 'base' for mainnet, 'base-sepolia' for testnet
NEXT_PUBLIC_NETWORK=base-sepolia

# Chain ID: 8453 for Base Mainnet, 84532 for Base Sepolia
NEXT_PUBLIC_CHAIN_ID=84532
